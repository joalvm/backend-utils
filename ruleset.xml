<?xml version="1.0"?>
<ruleset name="Backend-Utils">
    <description>Backend Utilities Project</description>

    <file>src/</file>

    <exclude-pattern>**/vendor/**</exclude-pattern>
    <exclude-pattern>./php_cs.php</exclude-pattern>

    <arg name="report" value="summary"/>
    <arg name="colors"/>
    <arg value="p"/>
    <ini name="memory_limit" value="128M"/>

    <rule ref="PSR12" />
</ruleset>
